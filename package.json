{
  "name": "fireshop",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "target-setup": "firebase target:apply hosting shop jp-fireshop && firebase target:apply hosting admin jp-fireshop-admin",
    "build": "npm --prefix client run build:all",
    "lint": "npm --prefix client run lint",
    "deploy": "npm run build && firebase deploy"
  },
  "author": {
    "name": "Jaspero Ltd",
    "email": "info@jaspero.co"
  },
  "keywords": [
    "webshop",
    "e-commerce",
    "angular",
    "firebase",
    "pwa"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jaspero/fireshop"
  },
  "bugs": {
    "url": "https://github.com/jaspero/fireshop/issues"
  },
  "homepage": "https://jaspero-fireshop.firebaseapp.com",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4"
  }
}
